@model IEnumerable<BowllyForever.Models.Cassette>

@{
    ViewData["Title"] = "Music Cassette Listings";
}
<style type="text/css">
    h2 {
        color: #069;
    }
</style>

<h2>Music Cassette Listings</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Artist)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.Label)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CatNo)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Released)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                <img src="https://bowllystore.blob.core.windows.net/cassette/Front/@Html.DisplayFor(modelItem => item.Front)" style='height:80px; width:50px ; object-fit: contain' />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatNo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Released)
            </td>
            <td>

                <a asp-action="Details" asp-route-id="@item.CassetteId">Details</a>

            </td>
        </tr>
}
    </tbody>
</table>
